@model CRMFamaV2.Models.AccountModel

@{
    Layout = null;
}

@section Scripts {
    <script></script>
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>

<body>
    <div>
        <form method="post" asp-controller="Admin" asp-action="Login">
            <h2>login</h2>
            <div class="w-50">
                <div class="form-group">
                    <label for="email">Tài khoan</label>
                    <input asp-for="email" id="email" class="form-control d-block w-100 mb-3" />
                </div>
                <div class="form-group">
                    <label for="password">Mật khẩu</label>
                    <input type="password" id="password" name="password" asp-for="password" class="form-control d-block w-100 mb-3" />
                </div>
                <label>
                    <input type="checkbox"  asp-for="loginStatus"/>
                    Keep me logged in
                </label>

                <div class="mt-3">
                    <button type="submit" class="submitBtn btn btn-primary" style="width: 150px">Login</button>
                </div>
            </div>

            @if (ViewData["ValidateMessage"] != null)
{
                    <br />
                    <br />
                    <label>@ViewData["ValidateMessage"]</label>
}
        </form>
    </div>
</body>
</html>


